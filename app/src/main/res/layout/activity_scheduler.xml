<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/barbershoppicture"
    android:orientation="vertical"
    tools:context=".activities.SchedulerActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Please select date"
            android:textSize="24sp" />


        <!--

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="399dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/white" />
-->


        <Button
            android:id="@+id/buttonEnterDateDisable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:text="Enter A Date" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            android:padding="20dp">

                <TextView
                    android:id="@+id/info_textDateSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@color/purple_500"
                    android:gravity="center_horizontal"
                    android:padding="20dp"
                    android:text="No Date Selected"
                    android:textColor="#1B1A1A"
                    android:textSize="36sp"
                    android:textStyle="italic" />

                <Spinner
                    android:id="@+id/spinnerHourPicker"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@color/design_default_color_primary"
                    android:textAlignment="center"
                    android:textColor="#4C4A4A" />

                <Button
                    android:id="@+id/buttonBookScheduler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:padding="20dp"
                    android:text="Book" />
        </LinearLayout>


</LinearLayout>