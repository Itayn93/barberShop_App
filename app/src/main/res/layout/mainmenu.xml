<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/Haircut_image">

    <TextView
        android:id="@+id/textViewWhatWouldYouLikeToDo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:text="What would you like to do ?"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonBookAppiontment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:onClick="goToBookAppointment"
            android:padding="20dp"
            android:text="Book Appiontment" />

        <Button
            android:id="@+id/buttonCancelAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:onClick="goToCancelAppointment"
            android:padding="20dp"
            android:text="Cancel Appointment" />

        <Button
            android:id="@+id/buttonRescheduleAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:onClick="goToRescheduleAppointment"
            android:padding="20dp"
            android:text="Reschedule Appointment" />
    </LinearLayout>
</FrameLayout>